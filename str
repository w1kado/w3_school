#Strings are Arrays

a = "Hello, World!"
print(a[1])

for x in "apple":
  print(x)

a = "Hello, World!"
print(len(a))

#Check String
txt = "Hayat bazen cok guzeldir"
if 'bazen' in txt:
    print("Evet hayat bazen guzeldir")


txt = "Hayat bazen cok guzeldir"
if 'Hayir' in txt:
    print("Hayir hayat bazen kotudur")
  

x = "WHOAMI"
print(x
    [1:4])
    

 x = "WHOAMI"
print(x[:4])
